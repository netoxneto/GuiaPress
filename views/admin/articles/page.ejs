<%- include ('../../partials/header'); %>
<body>
    <%- include ('../../partials/homenavbar');%>
    
    <div class="container">
        <br>

        <%result.articles.rows.forEach((articles)=>{%>
        <div class="card">
                <div class="card-header">
                    <h5><%=articles.title%></h5>
                </div>
                <div class="card-body">
                    <a href="/article/<%= articles.slug%>" class="btn btn-success btn-sm">Leia mais</a>
                </div>
        </div>
        <br>
        <%});%>

        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2){%>
                    <a href="/articles/page/<%= result.page - 1%>" style="float: left;" class="btn btn-outline-danger">Preview</a>
                <%}else if(result.page == 2){%>
                    <a href="/" style="float: left;" class="btn btn-outline-danger">Preview</a>
                <%}%>

                <% if(result.next){%>
                    <a href="/articles/page/<%= result.page + 1%>" style="float: right;" class="btn btn-outline-primary">Next</a>
                <br><br>
                <%}%>
            </div>
        </div>
    </div>

</body>
<%- include ('../../partials/footer'); %>